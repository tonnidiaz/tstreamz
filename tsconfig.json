{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "outDir": "./dist",
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "node",
        "strict": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": false,
        "allowJs": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@cmn/*": ["packages/common/src/*"]
        },
    }, 
    "include": ["**/**.ts"],
    "exclude": ["**/**.spec.ts", "node_modules", "apps/*", "packages/*"],
   
}
