{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ESNext",
        "useDefineForClassFields": true,
        "outDir": "./dist",
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "node",
        "strict": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noEmit": false,
        "allowJs": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "paths": {
            "@cmn/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*.ts", "**/*.ts"],
    "exclude": [
        "dist",
        "out",
        ".out",
        "**/*.spec.ts",
        "node_modules",
        "**/node_modules"
    ]
}
