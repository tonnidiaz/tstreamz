{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,

    // tu dded
    "baseUrl": "./",
    "paths": {
            "@/*": ["./src/*"],
            "@repo/ui/*": ["../../../apps/ui/src/*"],
            "@cmn/*": ["../../../packages/common/src/*"],
            "@repo/ui-next/*": ["../../../apps/ui-next/src/*"]
        }
  },
  "include": [
    "src", "../../../apps/ui-next/src/**/**.ts",
        "../../../apps/ui-next/src/**/**.tsx",
        "../../../apps/ui/src/**/**.ts",
        "../../../packages/common/src/**/**.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
