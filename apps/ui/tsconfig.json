{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": false,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {
            "@cmn/*": ["../../packages/common/src/*"],
            "@repo/ui/*": ["./src/*"]
        }
    },
    "include": [ 
        "**/*.ts",
        "../../packages/common/src/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
