{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true, 
        "noImplicitAny": false,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"],
            "@cmn/*": ["../../packages/common/src/*"],
            "@repo/ui-next/*": ["../ui-next/src/*"],
            "@repo/ui/*": ["../ui/src/*"]
        },
        // "types": ["ytdl-core", "../../node_modules/ytdl-core/typings/index.d.ts"]
    },
    "include": [
        "next-env.d.ts",
        // "../../node_modules/ytdl-core/typings/index.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "../../packages/common/src/**/*.ts",
        "../ui-next/src/**/*.ts",
        "../ui/src/**/*.ts",
        "../ui-next/src/**/*.tsx",
        "./*.ts",
        "src/app/rf/page.tsx.old"
    ],
    "exclude": ["node_modules"]
}
