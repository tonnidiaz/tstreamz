{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "node",
        "strict": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true, 
        "noEmit": true,
        "allowJs": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "~/*": ["src/*"],
            "@pkg/cmn/*": ["./packages/common/src/*"],
            "@cmn/*": ["../../packages/common/src/*"]
        }
    },
    "include": [
        "src",
        "**/*.ts",
        "../../packages/common/src/**/*.ts",
        "server.ts"
    ],
    "exclude": ["node_modules", "**/*.spec.ts", "**/**/node_modules"]
}
