{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "outDir": "./dist",
        "noImplicitAny": false,
        "paths": {
            "@cmn/*": ["../../packages/common/src/*"],
            "@/*": ["./src/*"],
            "@repo/ui/*": ["../../apps/ui/src/*"],
        }
    },
    "include": [
        "next-env.d.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "../../packages/common/src/**/*.ts",
        "../../apps/ui/src/**/*.ts"
    ],
    "exclude": [
        "dist",
        "out",
        ".out",
        "**/*.spec.ts",
        "node_modules",
        "**/node_modules"
    ]
}
