{
    "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",
    "applicationId": "js.neutralino.sample",
    "version": "1.0.0",
    "defaultMode": "window",
    "port": 0,
    "documentRoot": "/src-react/build/",
    "url": "/",
    "enableServer": true,
    "enableNativeAPI": true,
    "tokenSecurity": "one-time",
    "logging": {
      "enabled": true,
      "writeToLogFile": true
    },
    "nativeAllowList": [
      "app.*",
      "os.*",
      "server.*",
      "debug.log",
      "filesystem.*",
      "window.*"
    ],
    "globalVariables": {
      "TEST1": "Hello",
      "TEST2": [
        2,
        4,
        5
      ],
      "TEST3": {
        "value1": 10,
        "value2": {}
      }
    },
    "modes": {
      "window": {
        "title": "Neu app",
        "width": 800,
        "height": 500,
        "minWidth": 50,
        "minHeight": 50,
        "center": true,
        "fullScreen": false,
        "alwaysOnTop": false,
        "icon": "/resources/icons/appIcon.png",
        "enableInspector": false,
        "borderless": false,
        "maximize": false,
        "hidden": false,
        "resizable": true,
        "exitProcessOnClose": true
      },
      "browser": {
        "globalVariables": {
          "TEST": "Test value browser"
        },
        "nativeBlockList": [
          "filesystem.*"
        ]
      },
      "cloud": {
        "url": "/resources/#cloud",
        "nativeAllowList": [
          "app.*"
        ]
      },
      "chrome": {
        "width": 800,
        "height": 500,
        "args": "--user-agent=\"Neutralinojs chrome mode\"",
        "nativeBlockList": [
          "filesystem.*",
          "os.*"
        ]
      }
    },
    "cli": {
      "binaryName": "neutralino",
      "resourcesPath": "/src-react/build/",
      "extensionsPath": "/extensions/",
      "binaryVersion": "5.6.0",
  
      "frontendLibrary": {
          "patchFile": "/src-react/public/main.js",
          "devUrl": "http://localhost:4587",
          "projectPath": "/src-react/",
          "initCommand": "npm install",
          "devCommand": "BROWSER=none",
          "buildCommand": "npm run build"
      }
    }
  }