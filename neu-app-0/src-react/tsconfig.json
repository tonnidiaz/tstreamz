{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": false,
        "noImplicitAny": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@repo/ui/*": ["../../../apps/ui/src/*"],
            "@cmn/*": ["../../../packages/common/src/*"],
            "@repo/ui-next/*": ["../../../apps/ui-next/src/*"]
        }
    },
    "include": [
        "src",
        "../../../apps/ui-next/src/*",
        "../../../apps/ui-next/src/**/*.tsx",
        "../../../apps/ui/src/*",
        "../../../packages/common/src/**/*.ts"
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
}
